@page
@model Bartendroid.Pages.OnTap.IndexModel

@{
    ViewData["Title"] = "On Tap";

}

<h1>On Tap</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cocktail[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cocktail[0].Description)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cocktail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Order" asp-route-id="@item.Id">Order</a>|
          
            </td>
        </tr>
        }

    </tbody>
</table>
