@page
@model Bartendroid.Pages_Cocktails.RecipeModel

@{
    ViewData["Title"] = "Recipe";
}

<h1>Details</h1>

<div>
    <h4>Cocktail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cocktail.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cocktail.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cocktail.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cocktail.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cocktail.Photo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cocktail.Photo)
        </dd>
        @foreach (var item in Model.Cocktail.CocktailIngredients!)
        {
                        <div class="col-sm-10">
                            <div class="col-sm-2">
                                @item.Ingredient Ingredients @item.Quantity Quantity
                            </div>
                        </div>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cocktail?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
