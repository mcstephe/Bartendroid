@page
@model Bartendroid.Pages_Cocktails.CreateModel

@{
    if (!User.Identity!.IsAuthenticated) {
        Response.Redirect("Account/Login");
    }
    ViewData["Title"] = "Create";
}


<h1>Create</h1>

<h4>Cocktail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cocktail.Name" class="control-label"></label>
                <input asp-for="Cocktail.Name" class="form-control" />
                <span asp-validation-for="Cocktail.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cocktail.Description" class="control-label"></label>
                <input asp-for="Cocktail.Description" class="form-control" />
                <span asp-validation-for="Cocktail.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cocktail.Photo" class="control-label"></label>
                <input asp-for="Cocktail.Photo" class="form-control" />
                <span asp-validation-for="Cocktail.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
